# 生产环境配置
NODE_ENV=production

# API配置
VITE_API_BASE_URL=https://your-domain.com/api/v1
VITE_API_TIMEOUT=30000

# 加密配置 - 生产环境使用更强的密钥
VITE_CRYPTO_SECRET_KEY=your-production-secret-key-here
VITE_ENCRYPTION_ENABLED=true

# 安全配置
VITE_SIGNATURE_ENABLED=true
VITE_HTTPS_ENABLED=true

# 调试配置 - 生产环境关闭调试
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# 应用配置
VITE_APP_TITLE=智慧校园管理系统
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=智慧校园综合管理平台

# 文件上传配置
VITE_UPLOAD_MAX_SIZE=10485760
VITE_UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,txt,zip,rar

# WebSocket配置
VITE_WS_URL=wss://your-domain.com/ws
VITE_WS_ENABLED=true

# 缓存配置
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=1800000

# 监控配置
VITE_MONITORING_ENABLED=true
VITE_ERROR_REPORTING_ENABLED=true

# CDN配置
VITE_CDN_URL=https://cdn.your-domain.com
VITE_STATIC_URL=https://static.your-domain.com
